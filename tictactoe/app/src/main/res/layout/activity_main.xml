<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.justinbak.tictactoe.MainActivity">

    <GridLayout
        android:id="@+id/Board"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:background="@drawable/tictactoe"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/topleft"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:alpha="0"
            android:onClick="fadeIn"
            android:tag="0" />

        <ImageView
            android:id="@+id/topmid"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_row="0"
            android:alpha="0"
            android:onClick="fadeIn"
            android:tag="1" />

        <ImageView
            android:id="@+id/topright"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:alpha="0"
            android:onClick="fadeIn"
            android:tag="2" />

        <ImageView
            android:id="@+id/midleft"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:alpha="0"
            android:onClick="fadeIn"
            android:tag="3" />

        <ImageView
            android:id="@+id/mid"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:alpha="0"
            android:onClick="fadeIn"
            android:tag="4" />

        <ImageView
            android:id="@+id/midright"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:alpha="0"
            android:onClick="fadeIn"
            android:tag="5" />

        <ImageView
            android:id="@+id/bottomleft"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:alpha="0"
            android:onClick="fadeIn"
            android:tag="6" />

        <ImageView
            android:id="@+id/bottommid"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:alpha="0"
            android:onClick="fadeIn"
            android:tag="7"/>

        <ImageView
            android:id="@+id/bottomright"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:alpha="0"
            android:onClick="fadeIn"
            android:tag="8" />
    </GridLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp"
        android:onClick="playAgainButton"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
